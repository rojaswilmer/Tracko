{% extends 'TrackoCoreBundle:Base:responsive.html.twig' %}

{% block content -%}
    <h1>Company list</h1>

    <table class="item-list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Name</th>
                <th>Address</th>
                <th>Twitter</th>
                <th>Facebook</th>
                <th>Logo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companys %}
            <tr>
                <td><a href="{{ path('company_show', { 'id': company.id }) }}">{{ company.id }}</a></td>
                <td>{{ company.type }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.twitter }}</td>
                <td>{{ company.facebook }}</td>
                <td>{{ company.logo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('company_show', { 'id': company.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('company_edit', { 'id': company.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('company_create') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
